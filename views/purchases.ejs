<% layout('layout') -%>
<h2>Previous Purchases</h2>
<% if (purchases.length === 0) { %>
  <p>No purchases yet.</p>
<% } else { %>
  <ul>
    <% purchases.forEach(p => { %>
      <li>
        <img src="<%= p.product.image %>" width="60"/>
        <%= p.product.title %> — Qty: <%= p.quantity %> — ₹<%= p.product.price %> (Bought on <%= p.purchasedAt.toDateString() %>)
      </li>
    <% }) %>
  </ul>
<% } %>